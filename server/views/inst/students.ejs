<% include partials/head %>

<table class="table" id="studentsTable">
  <thead>
    <tr>
      <th scope="col">Student ID</th>
      <th scope="col">Lookedup/Voted</th>
      <th scope="col">Pages</th>
    </tr>
  </thead>
  <tbody>
    <% for(var i=0; i < students.length; i++) { %>
    <tr>
      <th scope="row"  data-order="<%= students[i].id %>">
        <% if( students[i].id > 4) { %>
        <b><%= students[i].id %></b>
        <% }else{ %>
        <small>
          <%= (students[i].id == 1 || students[i].id == 2 || students[i].id == 3)?'Test':'' %>
          <%= (students[i].id == 4 )?'Instructor':'' %>
        </small>
        <% } %>
      </th>
      <td data-order="<%= students[i].votes - 10 %>">
        <a href="/instructor/student/votes/<%= students[i].id %>">
          <%= students[i].words %><% if( students[i].votes > 10) { %>,
          ... (<%= students[i].votes - 10 %> more words).
          <% } %>
        </a>
      </td>
      <td><a href="/instructor/student/reading/<%= students[i].id %>"><%= students[i].pages_normal %></a></td>
    </tr>
    <% } %>
  </tbody>
</table>


<script>
  $(document).ready(function () {
    $('#studentsTable').DataTable({
      "bPaginate": false,
      "bInfo": false,
      "bFilter": false,
    });
  });
</script>

<% include partials/foot %>